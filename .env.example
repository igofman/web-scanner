# Web Scanner Configuration
# Copy this file to .env and modify as needed

# Crawler settings
SCANNER_MAX_DEPTH=3
SCANNER_MAX_PAGES=100
SCANNER_REQUEST_TIMEOUT=30
SCANNER_CONCURRENT_REQUESTS=5
SCANNER_RESPECT_ROBOTS_TXT=true
SCANNER_USER_AGENT="WebScanner/1.0 (Educational Purpose)"

# Storage settings
SCANNER_OUTPUT_DIR=./data
SCANNER_REPORTS_DIR=./reports

# Screenshot settings
SCANNER_SCREENSHOT_WIDTH=1920
SCANNER_SCREENSHOT_HEIGHT=1080
SCANNER_SCREENSHOT_FULL_PAGE=true

# Analyzer settings
SCANNER_GRAMMAR_LANGUAGE=en-US
SCANNER_CHECK_EXTERNAL_LINKS=false

# OCR settings
SCANNER_TESSERACT_LANG=eng
